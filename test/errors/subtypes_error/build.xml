<!--

Ant build.xml for subtypes_error test example.

The following properties can be set:

zserio.release_dir      - Directory where to find Zserio release to test. Default is "../../../distr".
test.build_dir          - Directory where to put generated files. Default is "../../../build/test".
findbugs.home_dir       - Location of the findbugs tool. If not set, findbugs is not run.

-->
<project name="subtypes_error" basedir="." default="run">
    <dirname property="subtypes_error.base_dir" file="${ant.file.subtypes_error}"/>

    <property name="zserio.root_dir" location="${subtypes_error.base_dir}/../../.."/>
    <property name="zserio.release_dir" location="${zserio.root_dir}/distr"/>
    <property name="zserio.jar_dir" location="${zserio.release_dir}/zserio_libs"/>

    <property name="test.build_dir" location="${zserio.root_dir}/build/test"/>
    <property name="test_utils.jar_file" location="${test.build_dir}/utils/jar/test_utils.jar"/>
    <property name="runtime.jar_dir" location="${zserio.release_dir}/runtime_libs/java"/>
    <property name="3rdparty.jar_dir" location="${zserio.root_dir}/3rdparty/java"/>

    <property name="subtypes_error.build_dir"
        location="${test.build_dir}/errors/subtypes_error"/>
    <property name="subtypes_error.zs.in_dir" location="${subtypes_error.base_dir}/zs"/>
    <property name="subtypes_error.zs.out_dir" location="${subtypes_error.build_dir}/gen"/>
    <property name="subtypes_error.zs.zserio_errors_file"
        location="${subtypes_error.build_dir}/zserio_errors.txt"/>
    <property name="subtypes_error.run_dir" location="${subtypes_error.build_dir}/run"/>

    <property name="runtime.jar_file" location="${runtime.jar_dir}/zserio_runtime.jar"/>
    <property name="3rdparty.junit.jar_file" location="${3rdparty.jar_dir}/junit-4.10.jar"/>

    <!-- Zserio Ant task -->
    <taskdef name="zserio" classpath="${zserio.release_dir}/ant_task/zserio_ant.jar" classname="zserio.ant.ZserioTask"/>

    <!-- classpath required for running the Zserio Tool -->
    <path id="zserio.classpath">
        <fileset dir="${zserio.jar_dir}">
            <include name="*.jar"/>
            <exclude name="zserio_ant.jar"/>
        </fileset>
    </path>

    <target name="prepare">
        <mkdir dir="${subtypes_error.build_dir}/classes"/>
    </target>

    <target name="gen" depends="prepare">
        <record name="${subtypes_error.zs.zserio_errors_file}" action="start" loglevel="warn"/>

        <zserio srcPath="${subtypes_error.zs.in_dir}" srcFile="database_subtype_error.zs"
            java="${subtypes_error.zs.out_dir}" ignoreError="true">
            <classpath>
                <path refid="zserio.classpath"/>
            </classpath>
        </zserio>

        <zserio srcPath="${subtypes_error.zs.in_dir}" srcFile="simple_cyclic_dependency_error.zs"
            java="${subtypes_error.zs.out_dir}" ignoreError="true">
            <classpath>
                <path refid="zserio.classpath"/>
            </classpath>
        </zserio>

        <zserio srcPath="${subtypes_error.zs.in_dir}" srcFile="transitive_cyclic_dependency_error.zs"
            java="${subtypes_error.zs.out_dir}" ignoreError="true">
            <classpath>
                <path refid="zserio.classpath"/>
            </classpath>
        </zserio>

        <record name="${subtypes_error.zs.zserio_errors_file}" action="stop"/>
    </target>

    <target name="compile" depends="gen">
        <depend srcDir="${subtypes_error.base_dir}/java"
            destDir="${subtypes_error.build_dir}/classes"
            cache="${subtypes_error.build_dir}/depend-cache"/>
        <javac destdir="${subtypes_error.build_dir}/classes" debug="on" encoding="utf8"
            includeAntRuntime="false">
            <classpath>
                <pathelement location="${runtime.jar_file}"/>
                <pathelement location="${3rdparty.junit.jar_file}"/>
                <pathelement location="${test_utils.jar_file}"/>
            </classpath>
            <src location="${subtypes_error.base_dir}/java"/>
        </javac>
    </target>

    <target name="findbugs" depends="compile" if="findbugs.home_dir" description="Run FindBugs">
        <taskdef name="findbugs" classpath="${findbugs.home_dir}/lib/findbugs-ant.jar"
            classname="edu.umd.cs.findbugs.anttask.FindBugsTask"/>
        <findbugs home="${findbugs.home_dir}"
            output="html"
            outputFile="${subtypes_error.build_dir}/findbugs.html"
            reportLevel="low"
            errorProperty="subtypes_error.is_failed"
            warningsProperty="subtypes_error.is_failed">
            <sourcePath>
                <dirset dir="${subtypes_error.base_dir}/java"/>
            </sourcePath>
            <fileset dir="${subtypes_error.build_dir}/classes"/>
            <auxClasspath>
                <fileset file="${runtime.jar_file}"/>
                <fileset file="${3rdparty.junit.jar_file}"/>
                <fileset file="${test_utils.jar_file}"/>
            </auxClasspath>
        </findbugs>
        <fail message="FindBugs found some issues!" if="subtypes_error.is_failed"/>
    </target>

    <target name="run" depends="findbugs">
        <delete dir="${subtypes_error.run_dir}"/>
        <mkdir dir="${subtypes_error.run_dir}"/>
        <copy file="${subtypes_error.zs.zserio_errors_file}" todir="${subtypes_error.run_dir}"/>
        <junit printsummary="no" fork="on" haltonfailure="on" dir="${subtypes_error.run_dir}">
            <classpath>
                <pathelement location="${subtypes_error.build_dir}/classes"/>
                <pathelement location="${runtime.jar_file}"/>
                <pathelement location="${3rdparty.junit.jar_file}"/>
                <pathelement location="${test_utils.jar_file}"/>
            </classpath>
            <batchtest>
                <fileset dir="${subtypes_error.base_dir}/java" includes="**/*Test.java"/>
                <formatter type="plain" usefile="false"/>
            </batchtest>
        </junit>
    </target>

    <target name="clean">
        <delete dir="${subtypes_error.build_dir}"/>
    </target>
</project>
