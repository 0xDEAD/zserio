<!--

Ant build.xml for java_version8 test example.

The following properties can be set:

zserio.release_dir      - Directory where to find Zserio release to test. Default is "../../../distr".
test.build_dir          - Directory where to put generated files. Default is "../../../build/test/java".
findbugs.home_dir       - Location of the findbugs tool. If not set, findbugs is not run.

-->
<project name="java_version8" basedir="." default="run">
    <dirname property="java_version8.base_dir"
        file="${ant.file.java_version8}"/>

    <property name="zserio.root_dir" location="${java_version8.base_dir}/../../.."/>
    <property name="zserio.release_dir" location="${zserio.root_dir}/distr"/>
    <property name="zserio.jar_dir" location="${zserio.release_dir}/zserio_libs"/>

    <property name="test.build_dir" location="${zserio.root_dir}/build/test/java"/>
    <property name="runtime.jar_dir" location="${zserio.release_dir}/runtime_libs/java"/>
    <property name="3rdparty.root_dir" location="${zserio.root_dir}/3rdparty"/>
    <property name="3rdparty.jar_dir" location="${3rdparty.root_dir}/java"/>

    <property name="java_version8.build_dir"
        location="${test.build_dir}/arguments/java_version8"/>
    <property name="java_version8.zs.in_dir"
        location="${java_version8.base_dir}/zs"/>
    <property name="java_version8.zs.out_dir"
        location="${java_version8.build_dir}/gen"/>
    <property name="java_version8.run_dir"
        location="${java_version8.build_dir}/run"/>

    <property name="runtime.jar_file" location="${runtime.jar_dir}/zserio_runtime.jar"/>
    <property name="3rdparty.junit.jar_file" location="${3rdparty.jar_dir}/junit-4.10.jar"/>

    <!-- Zserio Ant task -->
    <taskdef name="zserio" classpath="${zserio.release_dir}/ant_task/zserio_ant.jar" classname="zserio.ant.ZserioTask"/>

    <!-- classpath required for running the Zserio Tool -->
    <path id="zserio.classpath">
        <fileset dir="${zserio.jar_dir}">
            <include name="*.jar"/>
            <exclude name="zserio_ant.jar"/>
        </fileset>
    </path>

    <target name="prepare">
        <mkdir dir="${java_version8.build_dir}/classes"/>
    </target>

    <target name="gen" depends="prepare">
        <zserio srcPath="${java_version8.zs.in_dir}" srcFile="java_version8.zs"
            java="${java_version8.zs.out_dir}">
            <arg name="javaVersion" value="8"/>
            <arg name="withWriterCode"/>
            <dependencies>
                <fileset dir="${java_version8.zs.in_dir}" includes="**/*.zs"/>
                <fileset dir="${zserio.jar_dir}"/>
                <fileset dir="${runtime.jar_dir}"/>
                <fileset file="${ant.file.java_version8}"/>
            </dependencies>
            <output>
                <fileset dir="${java_version8.zs.out_dir}" includes="**/*.java"
                    erroronmissingdir="false"/>
            </output>
            <classpath>
                <path refid="zserio.classpath"/>
            </classpath>
        </zserio>
    </target>

    <target name="compile" depends="gen">
        <depend
            srcDir="${java_version8.base_dir}/java"
            destDir="${java_version8.build_dir}/classes"
            cache="${java_version8.build_dir}/depend-cache"/>
        <javac destdir="${java_version8.build_dir}/classes" debug="on" encoding="utf8"
            includeAntRuntime="false">
            <classpath>
                <pathelement location="${3rdparty.junit.jar_file}"/>
            </classpath>
            <src location="${java_version8.base_dir}/java"/>
        </javac>
    </target>

    <target name="findbugs" depends="compile" if="findbugs.home_dir" description="Run FindBugs">
        <taskdef name="findbugs" classpath="${findbugs.home_dir}/lib/findbugs-ant.jar"
            classname="edu.umd.cs.findbugs.anttask.FindBugsTask"/>
        <findbugs home="${findbugs.home_dir}"
            output="html"
            outputFile="${java_version8.build_dir}/findbugs.html"
            reportLevel="low"
            errorProperty="java_version8.is_failed"
            warningsProperty="java_version8.is_failed">
            <sourcePath>
                <dirset dir="${java_version8.base_dir}/java"/>
                <dirset dir="${java_version8.zs.out_dir}"/>
            </sourcePath>
            <fileset dir="${java_version8.build_dir}/classes"/>
            <auxClasspath>
                <fileset file="${runtime.jar_file}"/>
                <fileset file="${3rdparty.junit.jar_file}"/>
            </auxClasspath>
        </findbugs>
        <fail message="FindBugs found some issues!" if="java_version8.is_failed"/>
    </target>

    <target name="run" depends="findbugs">
        <delete dir="${java_version8.run_dir}"/>
        <mkdir dir="${java_version8.run_dir}"/>
        <junit printsummary="no" fork="on" haltonfailure="on" dir="${java_version8.run_dir}">
            <classpath>
                <pathelement location="${java_version8.build_dir}/classes"/>
                <pathelement location="${runtime.jar_file}"/>
                <pathelement location="${3rdparty.junit.jar_file}"/>
            </classpath>
            <batchtest>
                <fileset dir="${java_version8.base_dir}/java" includes="**/*Test.java"/>
                <formatter type="plain" usefile="false"/>
            </batchtest>
        </junit>
    </target>

    <target name="clean">
        <delete dir="${java_version8.build_dir}"/>
    </target>
</project>
